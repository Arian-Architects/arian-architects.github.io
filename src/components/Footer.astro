---
import { socialLinks } from 'src/data'
---

<div class="flex w-full items-center justify-center bg-black py-10">
  <div class="flex w-[75vw] flex-col text-white">
    <div class="w-full text-3xl font-bold md:text-7xl">
      <h1 class="w-full md:w-2/3">Arian Architects</h1>
    </div>
    <div class="mt-8 flex flex-col md:flex-row md:justify-between">
      <p class="w-full text-gray-400 md:w-2/3">90 MS Block, Hari Nagar, Clock Tower, opposite to Hotel Maya Palace, New Delhi, Delhi 110064</p>
    </div>
    {
      socialLinks && (
        <div class="mt-5 flex flex-row space-x-5">
          {socialLinks.map((item) => (
            <a target="_blank" href={item.href} rel="noopener noreferrer" aria-label={`${item.name} - Arian Architects`}>
              <img width="30px" height="30px" loading="lazy" decoding="async" src={item.src} alt={`${item.name} - Arian Architects`} />
            </a>
          ))}
        </div>
      )
    }
    <div class="mt-5 flex flex-col space-y-5">
      <a class="text-xl text-gray-400" href="mailto:arianarchitects@gmail.com">arianarchitects@gmail.com</a>
      <a class="text-xl text-gray-400" href="tel:+91-9999218269">+91-9999218269</a>
      <a class="text-xl text-gray-400" target="_blank" rel="noopener noreferrer" href="https://linkedin.com/in/rishi-raj-jain">
        Design & Development by <span class="underline">Rishi Raj Jain</span>
      </a>
    </div>
  </div>
</div>
