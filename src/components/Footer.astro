<div class="w-full py-10 flex items-center justify-center bg-black">
  <div class="w-[75vw] text-white flex flex-col">
    <div class="w-full text-3xl md:text-7xl font-bold">
      <h1 class="w-full md:w-2/3">Arian Architects</h1>
    </div>
    <div class="flex mt-8 flex-col md:flex-row md:justify-between">
      <p class="w-full md:w-2/3 text-gray-400">90 MS Block, Hari Nagar, Clock Tower, opposite to Hotel Maya Palace, New Delhi, Delhi 110064</p>
    </div>
    {
      socialLinks && (
        <div class="mt-5 flex flex-row space-x-5">
          {socialLinks.map((item) => (
            <a target="_blank" href={item.href} rel="noopener noreferrer" aria-label={`${item.name} - Arian Architects`}>
              <img width="30px" height="30px" loading="lazy" decoding="async" src={item.src} alt={`${item.name} - Arian Architects`} />
            </a>
          ))}
        </div>
      )
    }
    <div class="mt-5 flex flex-col space-y-5">
      <a class="text-gray-400 text-xl" href="mailto:arianarchitects@gmail.com">arianarchitects@gmail.com</a>
      <a class="text-gray-400 text-xl" href="tel:+91-9999218269">+91-9999218269</a>
      <a class="text-gray-400 text-xl" target="_blank" rel="noopener noreferrer" href="https://linkedin.com/in/rishi-raj-jain">
        Design & Development by <span class="underline">Rishi Raj Jain</span>
      </a>
    </div>
  </div>
