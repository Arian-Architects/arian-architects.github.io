---
import HeaderLink from './HeaderLink.astro'

const { link = false, href, text, mode = true, w = 'w-[150px]', onClick = undefined } = Astro.props

const buttonClass = [
  mode ? 'bg-black hover:bg-white text-white hover:text-black hover:shadow-2xl' : 'bg-white hover:bg-black text-black hover:text-white',
  'py-2 px-5 transition-colors duration-500',
  'text-lg text-center',
  'border border-black rounded-[2px]',
  w,
].join(' ')
---

{
  link ? (
    <HeaderLink className={buttonClass} href={href}>
      {text}
    </HeaderLink>
  ) : onClick ? (
    <button class={buttonClass} onclick={onClick}>
      {text}
    </button>
  ) : (
    <a href={href} class={buttonClass}>
      {text}
    </a>
  )
}
